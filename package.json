{
  "name": "vsanime",
  "version": "1.0.0",
  "description": "AnimeVS - Competitive Arena Game with multiplayer support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "anime",
    "game",
    "multiplayer",
    "websocket",
    "turn-based"
  ],
  "author": "RadzerYT",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.16.0",
    "npm": ">=6.14.0"
  }
}
